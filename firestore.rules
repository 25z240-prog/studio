
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isManagement() {
      return request.auth.token.email == "management@psgitech.edu";
    }
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if request.resource.data.id == userId;
      allow write: if isOwner(userId);
    }
    match /users/{userId}/votes/{voteId} {
      allow read, write: if isOwner(userId);
    }
    match /menuItems/{menuItemId} {
      allow get, list: if isSignedIn();
      allow create: if isManagement() && request.resource.data.submitterId == request.auth.uid;
      allow update: if isManagement() && resource.data.submitterId == request.auth.uid;
      allow delete: if isManagement() && resource.data.submitterId == request.auth.uid;
      
      match /votes/{voteId} {
        allow read, write: if isSignedIn() && request.resource.data.voterId == request.auth.uid;
      }
    }
  }
}
