
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent() {
      return request.auth.token.email.matches('.*@psgitech\\.ac\\.in$');
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isManagement() {
      return request.auth.token.email == "management@psgitech.ac.in";
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if request.resource.data.id == userId;
      allow write: if isOwner(userId);
    }
    
    match /menuItems/{menuItemId} {
      allow list, get: if isSignedIn();
      allow create, delete: if isManagement() && request.resource.data.submitterId == request.auth.uid;
      allow update: if (isManagement() && request.resource.data.submitterId == request.auth.uid) ||
                      (isStudent() && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['votes']) &&
                       request.resource.data.votes >= 0);

      match /votes/{voteId} {
         allow create, update, delete: if isStudent() && request.resource.data.voterId == request.auth.uid;
         allow read: if isSignedIn() && isOwner(request.resource.data.voterId);
      }
    }
    
     match /users/{userId}/votes/{voteId} {
      allow read, write: if isOwner(userId);
    }
  }
}
