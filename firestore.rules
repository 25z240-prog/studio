
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent() {
      return isSignedIn() && request.auth.token.email.matches('.*@psgitech\\.ac\\.in$');
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isManagement() {
      return isSignedIn() && request.auth.token.email == "management@psgitech.ac.in";
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    match /menuItems/{menuItemId} {
      allow read: if isSignedIn();
      allow create: if isManagement();
      allow delete: if isManagement();
      allow update: if isManagement() || (isStudent() && request.resource.data.votes == request.resource.data.votes + 1);
    }
  }
}
